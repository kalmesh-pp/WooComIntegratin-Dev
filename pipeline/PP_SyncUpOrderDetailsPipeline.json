								},
								"sink": {
									"path": "$['Shipping_state']"
								}
							},
							{
								"source": {
									"name": "shipping_provider",
									"type": "String"
								},
								"sink": {
									"path": "$['shipping_provider']"
								}
							},
							{
								"source": {
									"name": "products",
									"type": "String"
								},
								"sink": {
									"path": "$['products']"
								}
							}
						]
					}
				},
				"inputs": [
