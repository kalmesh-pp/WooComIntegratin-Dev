{
	"name": "PP_SyncUpOrderDetailsPipeline",
	"properties": {
		"activities": [
			{
				"name": "Copy Updated Orders to SFTP",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": "SELECT TOP 10000 orders.Order_id as order_id,\n\torders.Customer_id as customer_id,\n\torders.Order_status as order_status,\n\torders.Due_date,\n\torders.Created_date,\n\torders.Order_total,\n\torders.Line_subtotal,\n\torders.Shipping_total,\n\torders.Tax_total,\n\torders.Billing_email,\n\torders.Billing_phone,\n\torders.Billing_firstname,\n\torders.Billing_lastname,\n\torders.Billing_address_1, \n\torders.Billing_address_2, \n\torders.Billing_city,\n\torders.Billing_state,\n\torders.Billing_postcode,\n\torders.Shipping_firstname,\n\torders.Shipping_lastname,\n\torders.Shipping_address_1,\n\torders.Shipping_address_2,\n\torders.Shipping_city,\n\torders.Shipping_state,\n\torders.shipping_provider,\n\t( SELECT products.ProductName, \tproducts.SKU,\tproducts.Price,\tproducts.Qty, \tproducts.SubTotal\n\t\tfrom dbo.All_OrderItems products\n\t\twhere products.Co_num = orders.Order_id\n\t\tfor JSON PATH) as products\nFROM [dbo].All_Orders orders \n",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "SftpWriteSettings",
							"operationTimeout": "01:00:00",
							"useTempFileRename": true
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "order_id",
									"type": "String"
								},
								"sink": {
									"path": "$['order_id']"
								}
							},
							{
								"source": {
									"name": "customer_id",
									"type": "String"
								},
								"sink": {
									"path": "$['customer_id']"
								}
							},
							{
								"source": {
									"name": "order_status",
									"type": "String"
								},
								"sink": {
									"path": "$['order_status']"
								}
							},
							{
								"source": {
									"name": "Due_date",
									"type": "DateTime"
								},
								"sink": {
									"path": "$['Due_date']"
								}
							},
							{
								"source": {
									"name": "Created_date",
									"type": "DateTime"
								},
								"sink": {
									"path": "$['Created_date']"
								}
							},
							{
								"source": {
									"name": "Order_total",
									"type": "Decimal"
								},
								"sink": {
									"path": "$['Order_total']"
								}
							},
							{
								"source": {
									"name": "Line_subtotal",
									"type": "Decimal"
								},
								"sink": {
									"path": "$['Line_subtotal']"
								}
							},
							{
								"source": {
									"name": "Shipping_total",
									"type": "Decimal"
								},
								"sink": {
									"path": "$['Shipping_total']"
								}
							},
							{
								"source": {
									"name": "Tax_total",
									"type": "Decimal"
								},
								"sink": {
									"path": "$['Tax_total']"
								}
							},
							{
								"source": {
									"name": "Billing_email",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_email']"
								}
							},
							{
								"source": {
									"name": "Billing_phone",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_phone']"
								}
							},
							{
								"source": {
									"name": "Billing_firstname",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_firstname']"
								}
							},
							{
								"source": {
									"name": "Billing_lastname",
									"type": "String"
								},
								"sink": {
