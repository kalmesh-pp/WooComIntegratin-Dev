									"type": "String"
								},
								"sink": {
									"path": "$['Billing_address_2']"
								}
							},
							{
								"source": {
									"name": "Billing_city",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_city']"
								}
							},
							{
								"source": {
									"name": "Billing_state",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_state']"
								}
							},
							{
								"source": {
									"name": "Billing_postcode",
									"type": "String"
								},
								"sink": {
									"path": "$['Billing_postcode']"
								}
							},
							{
								"source": {
									"name": "Shipping_firstname",
									"type": "String"
								},
								"sink": {
									"path": "$['Shipping_firstname']"
								}
							},
							{
								"source": {
									"name": "Shipping_lastname",
